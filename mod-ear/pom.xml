						<ejbModule>
							<groupId>${project.groupId}</groupId>
							<artifactId>mod-domain-services</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>${project.groupId}</groupId>
							<artifactId>mod-business</artifactId>
						</ejbModule>
						<webModule>
							<groupId>${project.groupId}</groupId>
							<artifactId>mod-web</artifactId>
							<contextRoot>/mod-web</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

